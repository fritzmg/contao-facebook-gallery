{
    "name": "fritzmg/contao-facebook-gallery",
    "description": "Contao extension to integrate a public Facebook album just like a regular Contao gallery.",
    "keywords": ["contao", "facebook", "album", "gallery"],
    "type": "contao-module",
    "homepage": "http://www.inspiredminds.at",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Fritz Michael Gschwantner",
            "homepage": "http://www.inspiredminds.at",
            "email": "fmg@inspiredminds.at",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "fmg@inspiredminds.at",
        "issues": "https://github.com/fritzmg/contao-facebook-gallery/issues",
        "source": "https://github.com/fritzmg/contao-facebook-gallery",
        "forum": "https://community.contao.org/de"
    },
    "require": {
        "php": ">=5.2",
        "contao/core-bundle": "^3.5 || ^4.4",
        "contao-community-alliance/composer-plugin": "^2.4 || ^3.0",
        "fritzmg/contao-facebook-js-sdk": "^3.1",
        "facebook/graph-sdk": "^5.7"
    },
    "replace": {
        "contao-legacy/facebook_gallery": "self.version"
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/facebook_gallery": "system/modules/facebook_gallery"
            }
        }
    }
}
